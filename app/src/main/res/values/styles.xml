<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewReport" parent="CardView">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardBackgroundColor">@color/gray_light</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ImageViewReport">
        <item name="android:background">@drawable/shape_rectangle_rounded_8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="TextViewTabReport">
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTabSelectedReport" parent="TextViewTabReport">
        <item name="android:background">@drawable/shape_rectangle_rounded_8dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="TextViewRegularReport">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">12sp</item>
    </style>

    <style name="TextViewMediumReport">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextViewLightReport">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>